<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.submissions.any? %>
      <h3>Submissions (<%= @user.submissions.count %>)</h3>
      <ol class="submissions">
        <%= render @submissions %>
      </ol>
      <%= will_paginate @submissions %>
    <% end %>
  </div>
</div>
