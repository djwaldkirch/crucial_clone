<% provide(:title, 'New Submission') %>
<% provide :user_id %>
<h1>Create New Submission</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@submission, url: submissions_path) do |f| %>
      <% if @submission.errors.any? %>
          <div id="error_explanation">
            <div class="alert alert-danger">
              The form contains <%= pluralize(@submission.errors.count, "error") %>.
            </div>
            <ul>
            <% @submission.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
    ``<% end %>

      <%= f.label :title, "Title" %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :artist, "Artist" %>
      <%= f.text_field :artist, class: 'form-control' %>

      <%= f.label :genre, "Genre" %>
      <%= f.text_field :genre, class: 'form-control' %>

      <%= f.label :lyrics, "Lyrics" %>
      <%= f.text_area :lyrics, class: 'form-control' %>

      <%= f.submit "Create Submission", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>